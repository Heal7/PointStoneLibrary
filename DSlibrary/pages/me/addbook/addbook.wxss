/* pages/storage/storage.wxss */

page {
  background-color: #f5f5f9;
}

.container {
  padding: 20rpx 40rpx;
}

input,
textarea {
  border: 2rpx solid #ddd;
  padding: 10rpx;
  line-height: 76rpx;
  width: 96%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 4rpx;
}

button {
  margin-top: 20rpx;
  background-color: #9866ff;
  color: #fff;
  display: block;
  width: 100%;
}

picker {
  width: 96%;
  height: 40rpx;
  margin-top: 20rpx;
  border: 2rpx solid #ddd;
  padding: 10rpx;
}

.title {
  width: 100%;
  text-align: left;
}
